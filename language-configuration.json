{
    "comments": {
      "lineComment": "#"
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "[", "close": "]" },
      { "open": "(", "close": ")" },
      { "open": "\"", "close": "\"", "notIn": ["string"] },
      { "open": "'", "close": "'", "notIn": ["string"] },
      { "open": "```", "close": "```" },
      { "open": "\"\"\"", "close": "\"\"\"" }
    ],
    "surroundingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["\"", "\""],
      ["'", "'"],
      ["```", "```"],
      ["\"\"\"", "\"\"\""]
    ],
    "indentationRules": {
      "increaseIndentPattern": ":\\s*(?:$|#.*$)",
      "decreaseIndentPattern": "^\\s*(?:else:|elif .*:)"
    },
    "folding": {
      "markers": {
        "start": "^\\s*#\\s*region\\b",
        "end": "^\\s*#\\s*endregion\\b"
      }
    }
  }